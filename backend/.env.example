# Dance Video Generator - Configuration
# Copy this file to .env and update values as needed

# ============================================================================
# GPU PROCESSING MODE
# ============================================================================

# Option 1: LOCAL GPU/CPU Processing (Default)
# - Uses your local machine's GPU or CPU
# - Set COLAB_WORKER_URL to empty or None
# - Set PREFER_COLAB to False
COLAB_WORKER_URL=
PREFER_COLAB=False
USE_GPU=True
CUDA_VISIBLE_DEVICES=0

# Option 2: GOOGLE COLAB GPU Processing
# - Uses Google Colab's free/paid GPU (T4, V100, A100)
# - Requires running a Colab notebook with ngrok tunnel
# - Set COLAB_WORKER_URL to your ngrok URL
# - Set PREFER_COLAB to True
# COLAB_WORKER_URL=https://abc123.ngrok.io
# PREFER_COLAB=True

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dance_generator

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# MINIO (Object Storage)
# ============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False

# ============================================================================
# AI MODELS CONFIGURATION
# ============================================================================

# Face Expression Model: "liveportrait" or "fomm"
FACIAL_EXPRESSION_MODEL=liveportrait

# Body Motion Model: "animatediff" or "magicanimate"
# (Configured per request, default: animatediff)

# Expression Settings
ENABLE_FACIAL_EXPRESSIONS=True
ENABLE_LIP_SYNC=True
EXPRESSION_INTENSITY=1.0

# ============================================================================
# VIDEO PROCESSING
# ============================================================================
MAX_CONCURRENT_JOBS=2
VIDEO_OUTPUT_FPS=30
VIDEO_OUTPUT_RESOLUTION=1024

# ============================================================================
# API KEYS (Optional - for proprietary services)
# ============================================================================
# REPLICATE_API_TOKEN=your_replicate_token_here
# SEEDANCE_API_KEY=your_seedance_key_here

# ============================================================================
# CORS (Frontend URLs)
# ============================================================================
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ============================================================================
# DEBUG
# ============================================================================
DEBUG=True
