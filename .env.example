# ============================================================================
# DANCE VIDEO GENERATOR - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dance_generator

# ----------------------------------------------------------------------------
# REDIS
# ----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ----------------------------------------------------------------------------
# MINIO (Object Storage)
# ----------------------------------------------------------------------------
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# ----------------------------------------------------------------------------
# GPU CONFIGURATION
# ----------------------------------------------------------------------------
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# ----------------------------------------------------------------------------
# AI MODELS
# ----------------------------------------------------------------------------

# Facial expression model: fomm, liveportrait, face-vid2vid
FACIAL_EXPRESSION_MODEL=liveportrait

# Body motion model: magicanimate, magicdance, animatediff
BODY_MOTION_MODEL=animatediff

# Expression settings
ENABLE_FACIAL_EXPRESSIONS=true
ENABLE_LIP_SYNC=true
EXPRESSION_INTENSITY=1.0

# ----------------------------------------------------------------------------
# PROPRIETARY API KEYS (Optional)
# ----------------------------------------------------------------------------

# Seedance 2.0 API (for premium quality)
SEEDANCE_API_KEY=

# Replicate API (for hosted models)
REPLICATE_API_TOKEN=

# ----------------------------------------------------------------------------
# FRONTEND
# ----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# PROCESSING CONFIGURATION
# ----------------------------------------------------------------------------
MAX_CONCURRENT_JOBS=2
VIDEO_OUTPUT_FPS=30
VIDEO_OUTPUT_RESOLUTION=1024

# ----------------------------------------------------------------------------
# GOOGLE COLAB INTEGRATION (Optional)
# ----------------------------------------------------------------------------
# Set this to use Colab as a remote GPU worker
# Get URL from running the Colab notebook (ngrok URL)
COLAB_WORKER_URL=
# Example: https://abc123.ngrok.io

# Prefer Colab over local GPU if available
PREFER_COLAB=true

# ----------------------------------------------------------------------------
# OBSERVABILITY (Optional)
# ----------------------------------------------------------------------------
ENABLE_TELEMETRY=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
